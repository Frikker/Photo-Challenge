<h1 style="text-align: center"> Leaderboard </h1>
<table class="leaderboard-head">
  <tr>
    <td class="avatar"></td>
    <td class="name">Имя</td>
    <td class="link">Ссылка на соц.сеть</td>
    <td class="likes">Общее количество лайков</td>
  </tr>
</table>
<table class="leaderboard">
  <% @leaderboard.each do |leader| %>
  <tr>
    <td class="avatar"><%= link_to image_tag(leader[:photo]), user_url(leader[:id]) %></td>
    <td class="name"><%= "#{leader[:first_name]} #{leader[:last_name]}" %></td>
    <td class="link"><%= link_to '', leader[:page], class: "glyphicon glyphicon-cloud" %></td>
    <td class="likes"><%= leader[:likes] %></td>
  </tr>
  <% end %>
</table>