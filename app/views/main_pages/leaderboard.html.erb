<h1 style="text-align: center"> Leaderboard </h1>
<table class="leaderboard-head">
  <tr>
    <td class="avatar-cell"></td>
    <td class="name-cell">Имя</td>
    <td class="likes-cell">Общее количество лайков</td>
  </tr>
</table>
<table class="leaderboard">
  <% @leaderboard.each do |leader| %>
  <tr>
    <td class="avatar-cell"><%= link_to image_tag(leader[:photo], class: 'avatar'), user_url(leader[:id]) %></td>
    <td class="name-cell"><%= leader[:name] %></td>
    <td class="likes-cell"><%= leader[:likes] %></td>
  </tr>
  <% end %>
</table>