<div class="comments">
  <span class="comments-header header", style="text-align: center">Comments</span>
  <% @photopost.comments.each do |comment| %>
    <div class="comment">
      <%= link_to comment.user.first_name, edit_admin_user_path(comment.user.id) %>
      <p class="content"><%= comment.content %></p>
    </div>
  <% end %>
</div>