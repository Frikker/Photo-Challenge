$(document).ready(
    function show_form(comment_id){
        $(".form-"+comment_id)[0].style.display = "block";
    },

  function highlight(comment_id) {
      $('#comment-'+comment_id)[0].style.background = "rgba(0,255,150,0.5)";
      setTimeout(function () {
          $('#comment-'+comment_id)[0].style.background = "none";
      }, 2000)
  }
)
